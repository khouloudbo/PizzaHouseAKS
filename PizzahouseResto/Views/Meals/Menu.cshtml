@model IEnumerable<PizzahouseResto.Models.Meal>


@{
    ViewData["Title"] = "Menu";
}

<section class="bg-gray-7">
    <div class="breadcrumbs-custom box-transform-wrap context-dark">
        <div class="container">
            <h3 class="breadcrumbs-custom-title">Menu</h3>
            <div class="breadcrumbs-custom-decor"></div>
        </div>
        <div class="box-transform" style="        background-image: url(../images/bg-1.jpg);"></div>
    </div>
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="index.html">Home</a></li>
            <li class="active">Menu</li>
        </ul>
    </div>
</section>

<!-- Base typography-->
@if (Model.Count() > 0)
{
    <section class="section section-lg bg-default">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="special-menu text-center">
                        <div class="button-group filter-button-group">
                            <button>  <a class="active" asp-action="Menu">All</a></button>

                            <button>
                                <a asp-route-cat="Salads" asp-action="MealCategory">Salads</a>
                            </button>

                            <button>
                                <a asp-route-cat="Pizzas" asp-action="MealCategory">Pizzas</a>
                            </button>
                            <button>
                                <a asp-route-cat="Burgers" asp-action="MealCategory">Burgers</a>
                            </button>
                            <button>
                                <a asp-route-cat="Desserts" asp-action="MealCategory">Desserts</a>
                            </button>
                            <button>
                                <a asp-route-cat="Drinks" asp-action="MealCategory">Drinks</a>
                            </button>
                            <button>    <a asp-route-cat="Seafood" asp-action="MealCategory">Seafood</a></button>

</div>
                    </div>
                </div>
            </div>
            <div class="row row-lg row-30">
                @foreach (var obj in Model)
                {
                    <div class="col-sm-6 col-lg-4 col-xl-3">
                        <!-- Product-->
                        <article class="product wow fadeInLeft" data-wow-delay=".15s">
                            <div class="product-figure">
                                <img src="@WC.ImagePath@obj.ImageName" alt="" width="161" height="162" />
                            </div>
                            <div class="product-rating">
                                <span class="mdi mdi-star"></span><span class="mdi mdi-star"></span><span class="mdi mdi-star"></span><span class="mdi mdi-star"></span><span class="mdi mdi-star text-gray-13"></span>
                            </div>
                            <h6 class="product-title">@obj.Name</h6>
                            <p>@obj.Description</p>
                            <div class="product-price-wrap">
                                <div class="product-price">@obj.Price <span>DT</span></div>
                            </div>

                            <div class="product-button">
                                <div class="button-wrap"><a class="button button-xs button-primary button-winona" asp-route-id="@obj.MealId" asp-action="Details">Details</a></div>
                            </div>
                        </article>
                    </div>

                }

            </div>
        </div>
    </section>
}
else
{
    <p> No Meal exists.</p>
}
<section class="section section-md section-last bg-default section-style-2 text-md-left">
    <div class="container">
        <div class="row row-50">
            <div class="col-lg-10 col-xl-7">
                <h4>Blockquote</h4>
                <!-- Quote Classic-->
                <article class="quote-classic">
                    <div class="quote-classic-text">
                        <p class="q">Welcome to our wonderful world. We sincerely hope that you will find exactly what you need.</p>
                    </div>
                    <p class="quote-classic-author">Stephen Adams</p>
                </article>
            </div>
        </div>
    </div>
</section>

