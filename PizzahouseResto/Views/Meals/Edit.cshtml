@model PizzahouseResto.Models.Meal

@{
    ViewData["Title"] = "Modify Meal";
}

<div class="container p-3">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">

        <input asp-for="MealId" hidden />





        <div class="form-group ">

            <label asp-for="Name"></label>

            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="form-group ">

            <label asp-for="Description"></label>

            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>


        </div>
        <div class="form-group ">

            <label asp-for="Price"></label>

            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>


        </div>

        <div class="form-group ">

            <label asp-for="ImageFile"></label>

            <input asp-for="ImageFile" class="form-control" />
            <img src="@("~/images/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            <input asp-for="ImageName" type="hidden" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>


        </div>

        

        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            @Html.DropDownList("Category",
     new SelectList(Enum.GetValues(typeof(Categories))),
     "Select Category",
     new { @class = "form-control" })
        </div>

        <hr />




        <input type="submit" class="btn btn-primary button-sm" value="Save" />

        <a asp-action="Index" class="btn btn-secondary button-sm"><i class="fas fa-sign-out-alt"></i> Back</a>


        <div class="col-4">
            @* Keep this empty *@
        </div>



    </form>
</div>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
