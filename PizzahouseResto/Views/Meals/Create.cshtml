@model PizzahouseResto.Models.Meal

@{
    ViewData["Title"] = "Add new Meal";
}

<div class="container p-3">
    <form method="post" asp-action="Create" enctype="multipart/form-data">

        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <h4>Create a new meal.</h4>
        <hr />
        <div class="form-group ">

            <label asp-for="Name"></label>


            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>


        </div>
        <div class="form-group ">

            <label asp-for="Description"></label>

            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>


        </div>
        <div class="form-group ">

            <label asp-for="Price"></label>

            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>


        </div>

        <div class="form-group ">

            <label asp-for="ImageFile"></label>

            <input asp-for="ImageFile" accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>


        </div>


        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            @Html.DropDownList("Category",
     new SelectList(Enum.GetValues(typeof(Categories))),
     "Select Category",
     new { @class = "form-control" })
        </div>
        <hr />




        <input type="submit" class="btn btn-primary button-sm" value="Create" />

        <a asp-action="Index" class="btn btn-secondary button-sm"><i class="fas fa-sign-out-alt"></i> Back</a>




        <div class="col-4">
            @* Keep this empty *@
        </div>



    </form>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
