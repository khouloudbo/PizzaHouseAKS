@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}
<section class="bg-gray-7">
    <div class="breadcrumbs-custom box-transform-wrap context-dark">
        <div class="container">
            <h3 class="breadcrumbs-custom-title">Users</h3>
            <div class="breadcrumbs-custom-decor"></div>
        </div>
        <div class="box-transform" style="        background-image: url(../images/bg-1.jpg);">

        </div>
    </div>

</section>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Users" asp-action="Add" class="btn btn-primary button-sm">
                <i class="fas fa-plus"></i> &nbsp; Add New User
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr >
                <th>First Name</th>
                <th>Last Name</th>
                <th>Street Address</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.StreetAddress</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" , ", user.Roles.ToList())</td>
                    <td>
                       
                        <a class="btn btn-primary  button-xs" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id"><i class="fa fa-exchange" aria-hidden="true"></i>  Manage Roles</a>
                      
                        <a asp-controller="Users" asp-route-userId="@user.Id" asp-action="Edit" class="btn btn-primary  button-xs">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>