@model PizzahouseResto.ViewModels.ProductUserVM

    <section class="bg-gray-7">
        <div class="breadcrumbs-custom box-transform-wrap context-dark">
            <div class="container">
                <h3 class="breadcrumbs-custom-title">Summary</h3>
                <div class="breadcrumbs-custom-decor"></div>
            </div>
            <div class="box-transform" style="        background-image: url(../images/bg-1.jpg);"></div>
        </div>
        <div class="container">
            <ul class="breadcrumbs-custom-path">
            </ul>
        </div>
    </section>

    <section class="section section-lg bg-default text-md-left">
        <div class="container">
            <form method="post">
                <div class="row row-60 justify-content-center">
                    <div class="col-lg-8">
                        <p class="aside-contacts-title">User Details</p>

                        <hr class="divider-w pt-20">

                        <div class="row row-20 gutters-20">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row">

                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>First Name</label>
                                            <input asp-for="ApplicationUser.Id" type="hidden" />
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.FirstName" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Last Name</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.LastName" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Street Address</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.StreetAddress" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="ApplicationUser.Email" type="text" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-5 row">
                                    <div class="col-12">
                                        <p class="aside-contacts-title">Order Summary</p>
                                        <hr class="divider-w pt-20">
                                        <ul class="list-group mb-3">
                                            @for (int i = 0; i < Model.ProductList.Count(); i++)
                                            {
                                                <input type="hidden" asp-for="@Model.ProductList[i].MealId" />
                                                <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <div>
                                                        <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                        <small class="text-muted">Price : @Model.ProductList[i].Price DT</small>
                                                        <small class="text-muted">Quantity : @Model.ProductList[i].Quantity </small>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>




                        </div>


                    </div>
                    <div class="col-lg-4">
                        <div class="aside-contacts">

                            <div class="row row-30">
                                <div class="col-sm-6 col-lg-12 aside-contacts-item">

                                    <p class="aside-contacts-title">Cart Totals</p>
                                </div>

                                <div class="col-sm-6 col-lg-12 aside-contacts-item">
                                    <table class="table table-striped table-border checkout-table">
                                        <tbody>
                                            <tr>
                                                <th>Cart Subtotal :</th>
                                                <td>@Model.TotalPrice DT</td>
                                            </tr>
                                            <tr>
                                                <th>Shipping Total :</th>
                                                <td>8 DT</td>
                                            </tr>
                                            <tr class="shop-Cart-totalprice">
                                                <th>Total :</th>
                                                <td>
                                                    @{@(Model.TotalPrice + 8) } DT</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <button class="button button-primpary button-winona" type="submit">Order</button>

                        </div>
                    </div>
                </div>
                </form>
        </div>
    </section>


    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }